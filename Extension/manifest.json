{
    "manifest_version": 3,
    "name": "AI Reply",
    "version": "1.0",
    "description": "Your extension description",
    "permissions": [
        "scripting",
        "activeTab",
        "storage",
        "identity", 
        "http://127.0.0.1:5000/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}